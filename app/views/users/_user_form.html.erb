<%= simple_form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited your profile from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h4>Upload a photo</h4>
  <%= f.file_field :avatar, class: "hidden-label", label: 'Upload your photo' %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :description, label: 'Bio' %>
  <br>
  <h5>Check this box to receive our weekly newsletter with updates on these cases and other news:</h5>
  <%= f.input :subscribed, inline_label: "Click here to receive our newsletter!" %>
  <div class ="btn-group user-submit">
    <%= f.button :submit, "Update profile", class: 'btn btn-success btn-capitalized' %>
  </div>
<% end %>
